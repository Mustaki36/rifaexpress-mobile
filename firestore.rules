
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite acceso de lectura y escritura a todos los documentos
    // para cualquier usuario autenticado. En un entorno de producción,
    // querrás reglas más restrictivas.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
