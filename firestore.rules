rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Public read access for raffles and results
    match /raffles/{raffleId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /results/{resultId} {
      allow read: if true;
      allow write: if false; // Results are created server-side, not by clients
    }

    // Users can manage their own data
    match /usuarios/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow creation of user doc during signup
      allow create: if request.auth != null;
    }
    
    // Authenticated users can view reservations, but only act on their own
    match /reservations/{reservationId} {
      allow read: if request.auth != null;
      allow write, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Only admin should be able to see the blocked users list
    match /blockedUsers/{docId} {
      allow read, write: if get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
